{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node10",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "outDir": "dir"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

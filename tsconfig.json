{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": false,
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "outDir": "./dist",
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}